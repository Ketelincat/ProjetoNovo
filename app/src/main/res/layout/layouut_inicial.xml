<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inicial">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/comfortaalight"
        android:text="Hello"
        android:textSize="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="190dp"
        android:fontFamily="@font/comfortaavariablefontwght"
        android:text="Kitty"
        android:textSize="60dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="255dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/linhap" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/circulop" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:src="@drawable/calendario" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="75dp"
        android:layout_marginRight="35dp"
        android:src="@drawable/circulopeixinho" />

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="140dp"
        android:fontFamily="@font/comfortaalight"
        android:text="Seu app de cuidados para gatinhos,acompanhe suas consultas e promoções"
        android:textSize="22dp" />

    <ImageView
        android:layout_marginBottom="50dp"
        android:layout_gravity="center|bottom"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/seta"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>